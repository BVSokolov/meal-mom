generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum QuantityUOM {
  GR
  KG
  TSP
  TBSP
  L
  ML
  ITEM
  CUP
  PINCH
}

model Ingredient {
  id                String             @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name              String
  recipeIngredients RecipeIngredient[]
}

model Recipe {
  id       String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name     String
  servings Int

  createdAt  DateTime @default(now()) @db.Timestamp(6)
  modifiedAt DateTime @default(now()) @db.Timestamp(6)

  recipeSections    RecipeSection[]
  recipeIngredients RecipeIngredient[]
  recipeSteps       RecipeStep[]
}

model RecipeSection {
  id       String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  recipeId String @map("recipe_id") @db.Uuid
  name     String
  position Int

  createdAt  DateTime @default(now()) @db.Timestamp(6)
  modifiedAt DateTime @default(now()) @db.Timestamp(6)

  recipe            Recipe             @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeIngredients RecipeIngredient[]
  recipeSteps       RecipeStep[]
}

model RecipeIngredient {
  id              String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  ingredientId    String      @map("ingredient_id") @db.Uuid
  recipeId        String      @map("recipe_id") @db.Uuid
  recipeSectionId String      @map("recipeSection_id") @db.Uuid
  amount          Int
  amountUOM       QuantityUOM
  position        Int

  createdAt  DateTime @default(now()) @db.Timestamp(6)
  modifiedAt DateTime @default(now()) @db.Timestamp(6)

  ingredient    Ingredient    @relation(fields: [ingredientId], references: [id], onDelete: Cascade)
  recipe        Recipe        @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeSection RecipeSection @relation(fields: [recipeSectionId], references: [id], onDelete: Cascade)
}

model RecipeStep {
  id              String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  recipeId        String @map("recipe_id") @db.Uuid
  recipeSectionId String @map("recipeSection_id") @db.Uuid
  position        Int
  text            String

  createdAt  DateTime @default(now()) @db.Timestamp(6)
  modifiedAt DateTime @default(now()) @db.Timestamp(6)

  recipe        Recipe        @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeSection RecipeSection @relation(fields: [recipeSectionId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name          String    @default("NO_NAME")
  email         String    @unique(map: "user_email_idx")
  emailVerified DateTime? @map("email_verified") @db.Timestamp(6)
  image         String?
  password      String?
  role          String    @default("user")

  createdAt DateTime @default(now()) @db.Timestamp(6)
  updatedAt DateTime @updatedAt @db.Timestamp(6)

  account Account[]
  session Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId            String  @map("user_id") @db.Uuid
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  createdAt DateTime @default(now()) @db.Timestamp(6)
  updatedAt DateTime @updatedAt @db.Timestamp(6)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id") @db.Uuid
  expires      DateTime @db.Timestamp(6)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @db.Timestamp(6)
  updatedAt DateTime @updatedAt @db.Timestamp(6)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime @db.Timestamp(6)

  @@unique([identifier, token])
  @@map("verification_tokens")
}
